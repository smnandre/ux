<{{ loadingTag }} {{ attributes }} loading="{{ lazy ? 'lazy'}}"
{#    data-action="live:{{ lazy ? 'appear' : 'connect' }}->live#$render"#}
>

    {% block loadingContent %}
        IN THE BLOCK !!
        {% if loadingTemplate %}
            {{ include(loadingTemplate) }}
        {% elseif componentTemplate != null and (block("loadingContent", componentTemplate) is defined) %}
            {% with {lazy: true} %}
                {{ componentTemplate }}
                {{ block("loadingContent", componentTemplate) }}
            {% endwith %}
        {% endif %}
    {% endblock %}

</{{ loadingTag }}>
