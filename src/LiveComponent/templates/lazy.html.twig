<{{ loadingTag }} {{ attributes }}  class="intersect" data-action="live:intersect->live#$render">

    {% block loadingContent %}
        {% if loadingTemplate != null %}
            {{ include(loadingTemplate) }}
        {% elseif componentTemplate != null and (block("loadingContent", componentTemplate) is defined) %}
            {{ block("loadingContent", componentTemplate) }}
        {% endif %}
    {% endblock %}

</{{ loadingTag }}>
