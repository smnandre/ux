{% extends 'base.html.twig' %}

{% block javascripts %}
    {{ parent() }}
    <meta name="turbo-prefetch" content="false">
{% endblock %}

{% set meta = {
    title: 'Search Icons Packs - Symfony UX:Icons',
    description: '',
    canonical: url('app_icon_sets_category', {category: category}),
} %}

{% block content %}

    <div class="hero">
        <div class="container-fluid container-xxl px-4 pt-5 px-md-5 pt-md-5">
            <p class="eyebrows text-center">
                <a href="{{ path('app_icons') }}">UX <span>Icons</span></a> /
                <a href="{{ path('app_icon_sets') }}">Icon Sets</a>
            </p>
            <h1 class="text-center ubuntu mt-3">
                <a href="{{ url('app_icon_sets_category', {category: category}) }}">
                    {{ category|title }} Icons Sets
                </a>
            </h1>
            <p class="text-center mt-2 mb-5">{{ category }} todo todo</p>
        </div>
    </div>

    <div class="container container-xxl text-center">
         {% for category in categories %}
            <a href="{{ url('app_icon_sets_category', {category: category}) }}">
                {{ category|title }}
            </a>
        {% endfor %}
    </div>

    <section class="container-fluid container-xxl px-4 py-4 mb-5">
        <div>
            <twig:Icon:IconSetGrid iconSets="{{ iconSets|slice(0, 3) }}" samples="10" />
        </div>
    </section>

    <section class="container-fluid container-xxl px-4 py-4 mb-5">
        <div class="row mb-5 px-4">
            <div class="col-12 col-md-6">
                <h2>Import Icon</h2>
                {%- set html %}
                    {%- verbatim -%}
{% for country in countries %}
    <label>
        <input type="checkbox" name="country" value="{{ country }}" />
        <:ux:icon name="flag:{{ country }}" />
        {{ country|country_name }}
    </label>
{% endfor %}
                    {%- endverbatim -%}
                {%- endset %}
                <twig:Code:CodeLine class="IconModal__code" height="auto">
                    {{- html|replace({':ux': 'twig:ux'})|highlight('twig') }}
                </twig:Code:CodeLine>
            </div>
            <div class="col-12 col-md-6 mt-3 mt-md-0">
                <div class="IconGrid">
                   {% for country in ['us', 'fr', 'de'] %}
                       <div class="IconCard">
                           <button class="IconCard__link">
                               <twig:ux:icon name="circle-flags:{{ country }}" style="margin: .5rem;" />
                           </button>
                       </div>
                    {% endfor %}
                </div>

                <div class="IconGrid">
                   {% for country in ['us', 'fr', 'de'] %}
                       <div class="IconCard">
                           <button class="IconCard__link">
                               <twig:ux:icon name="flag:{{ country }}-1x1" style="margin: .5rem;" />
                           </button>
                       </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </section>

    <section class="container-fluid container-xxl px-4 py-4 mb-5">
        <div class="mb-5">
            <h2 class="ubuntu text-center">All {{ category }} Icon Sets </h2>
        </div>
        <twig:Icon:IconSetGrid iconSets="{{ iconSets }}" samples="0" />
    </section>

{% endblock %}


{% block aside %}
    {{ include('icons/_aside.html.twig') }}
{% endblock %}
