<div {{ attributes.defaults({
    class: 'row mb-5 py-4 align-items-center position-relative',
    style: '--bs-gutter-x: 4rem'
}) }}>
    <div class="col-12 col-md-6 code-description {{ not reversed ? 'order-md-2' }}"  {% if reversed %}style="padding-inline-end: 0;"{% endif %}>
        {% apply markdown_to_html %}
            {% block content %}{% endblock %}
        {% endapply %}
    </div>
    <div class="col-12 col-md-6 {{ not reversed ? 'order-md-1' }}"  {% if reversed %}style="padding-inline-end: 0;"{% endif %}>
        <twig:CodeBlock
            :filename="filename"
            :targetTwigBlock="targetTwigBlock"
            :showTwigExtends="false"
            style="--bg-header: rgba(13, 13, 13, 0.729); --header-opacity: .5;"
        />
    </div>
</div>
