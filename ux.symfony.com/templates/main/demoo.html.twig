{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link
        rel="stylesheet"
        href="https://cdn.jsdelivr.net/npm/@picocss/pico@2/css/pico.conditional.min.css"
    />
    <style>
      header {
        position: relative !important;
      }
    </style>
{% endblock %}

{% set meta = {
    title: "Symfony UX: JavaScript tools you'll love",
} %}

{% block banner %}{% endblock %}


{% block content %}

    <section class="pico">
        <div class="container">

            <p>Styled hello world!</p>

            <progress value="94" max="100"></progress>

            <div class="grid">
                <button class="secondary">Secondary</button>
                <button class="contrast">Contrast</button>
            </div>

        </div>
    </section>

    <section class="pico">
        <div class="container">

            <form>
                <fieldset>
                    <label>
                        First name
                        <input
                            name="first_name"
                            placeholder="First name"
                            autocomplete="given-name"
                        />
                    </label>
                    <label>
                        Email
                        <input
                            type="email"
                            name="email"
                            placeholder="Email"
                            autocomplete="email"
                        />
                    </label>
                </fieldset>

                <input
                    type="submit"
                    value="Subscribe"
                />
            </form>

        </div>
    </section>




{% endblock %}
